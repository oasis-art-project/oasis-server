    "version": "0.2.0",
    "configurations": [
        {
            "name": "OASIS populate script",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/scripts",
            "program": "${workspaceFolder}/scripts/populate.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--local",
            ],            
        },
        {
            "name": "OASIS server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",
                "DATABASE_URL": "postgresql://localhost/oasis",
                "AWS_DISABLED": "True",
                "S3_BUCKET": "<put S3 bucket name here>",
                "AWS_ACCESS_KEY_ID": "<put S3 access key ID here>",
                "AWS_SECRET_ACCESS_KEY": "<put S3 secret access key here>"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
}